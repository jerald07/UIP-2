<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottom_dialog">

    <ImageView
        android:id="@+id/bd_close"
        android:layout_width="28sp"
        android:layout_height="28sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10sp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/bd_close"
        android:layout_marginStart="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Drive"
            android:drawableStart="@drawable/ic_baseline_add_to_drive_24"
            android:drawablePadding="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Link"
            android:drawableStart="@drawable/ic_insert_link"
            android:drawablePadding="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="File"
            android:drawableStart="@drawable/ic_attach_file"
            android:drawablePadding="10sp"/>
    </LinearLayout>

</RelativeLayout>