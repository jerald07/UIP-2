<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context= ".loginplatform" >


    <TextView
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50sp"
        android:layout_marginTop="70sp"
        android:layout_marginEnd="50sp"
        android:layout_marginBottom="50sp"
        android:fontFamily="monospace"
        android:text="@string/sign_in"
        android:textAlignment="center"
        android:textColor="#455A64"
        android:textSize="48sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20sp"
        android:layout_marginTop="180sp"
        android:layout_marginEnd="20sp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:drawableStart="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="20sp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp"
            android:textAlignment="viewStart"
            android:textColorHint="#616161"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:autofillHints=""
            android:background="@android:drawable/editbox_background_normal"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="20sp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingStart="20sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="10sp"
            android:textAlignment="viewStart"
            android:textColorHint="#78909C"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10sp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:text="@string/forgot_password"
            android:textAlignment="textEnd"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:layout_marginTop="1sp"
            android:layout_marginRight="120sp"
            android:text="@string/login"
            android:textColor="#D7CCC8"
            app:cornerRadius="16sp" />

        <TextView
            android:id="@+id/id_xaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="Don't have an account?"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_apply_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="Apply now!"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="-20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50sp"
        android:gravity="center">


        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="20sp"
            android:src="@drawable/melham" />

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="20sp"
            android:src="@drawable/visvis" />

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="20sp"
            android:src="@drawable/anafara" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/icon_company"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/company"
        android:textColor="#ffff"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:src="@drawable/uip"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp" />

</RelativeLayout>