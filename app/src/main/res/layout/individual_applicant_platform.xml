<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:orientation="vertical"
    tools:context=".individual_applicant_platform">

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Individual Applicant"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scroll_01"
        style="@android:style/Widget.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up"
        android:scrollbarStyle="insideInset">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_pi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            app:cardBackgroundColor="?attr/colorControlHighlight"
            app:cardCornerRadius="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10sp"
                android:orientation="vertical"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextView
                    android:id="@+id/personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:shadowColor="#1437FA"
                    android:text="Personal Information"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ia_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableStart="@drawable/ic_baseline_person_outline_24"
                    android:drawablePadding="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="Last name"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:paddingLeft="10sp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ia_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableStart="@drawable/ic_baseline_person_outline_24"
                    android:drawablePadding="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="First name"
                    android:minHeight="48dp"
                    android:paddingLeft="10sp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ia_middle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:autofillHints=""
                    android:background="@android:drawable/editbox_background"
                    android:drawableStart="@drawable/ic_baseline_person_outline_24"
                    android:drawablePadding="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="Middle name"
                    android:minHeight="48dp"
                    android:paddingStart="10sp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ia_gmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="example_gmail_com"
                    android:importantForAutofill="no"
                    android:inputType="textWebEmailAddress"
                    android:minHeight="48dp"
                    android:paddingLeft="10sp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ia_sch_course_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    android:shadowColor="#1437FA"
                    android:text="School and Required Hours"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/ia_required_hrs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableStart="@drawable/ic_hourglass_full"
                    android:drawablePadding="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="Required Hours"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:paddingLeft="10sp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ia_school_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableStart="@drawable/ic_school"
                    android:drawablePadding="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="School"
                    android:minHeight="48dp"
                    android:paddingLeft="10sp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ia_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableStart="@drawable/ic_school"
                    android:drawablePadding="10sp"
                    android:fontFamily="sans-serif"
                    android:hint="Course"
                    android:minHeight="48dp"
                    android:paddingLeft="10sp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_next_individual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="20sp"
                    android:text="next"
                    app:cornerRadius="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>

</RelativeLayout>
